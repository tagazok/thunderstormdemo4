{
    "routes": [
        {
            "route": "/api/tasks/*",
            "allowedRoles": [
                "authenticated"
            ]
        },
        {
            "route": "/",
            "allowedRoles": [
                "authenticated"
            ]
        },
        {
            "route": "/index.html",
            "allowedRoles": [
                "authenticated"
            ]
        },
        {
            "route": "/.auth/login/twitter",
            "statusCode": 404
        }
    ],
    "responseOverrides": {
        "401": {
            "rewrite": "/login.html"
        },
        "404": {
            "rewrite": "/custom-404.html"
        }
    }
}